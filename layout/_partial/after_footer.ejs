<% if (theme.search.local) { %>
<script src="<%- config.root %>js/search.js"></script>
<script>
var search_path = "<%= config.search.path %>";
if (search_path.length == 0) {
	search_path = "search.xml";
}
var path = "<%= config.root %>" + search_path;
searchFunc(path, 'local-search-input', 'local-search-result');
</script>
<% } else if (theme.search.bing) { %>
<script>
  var bing = $('#bing_search_form')
  var input = $('#bing_search_input')
  var prefix = 'site:blog.zengrong.net '
  bing.submit(function(e) {
    var q = input.val()
    if (q.indexOf(prefix) === -1) {
      input.val(prefix + q)
    }
  })
  input.click(function(e){
    if (input.val().indexOf(prefix) === 0) {
      input.val('')
    }
  })
</script>
